{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "perf",
                "test",
                "build",
                "ci",
                "chore",
                "revert",
                "wip",
                "workflow",
                "types",
                "release"
            ]
        ],
        "subject-max-length": [
            1,
            "always",
            150
        ]
    }
}